{% extends 'base.html.twig' %}

{% block title %}Search result page{% endblock title %}

{% block body %}
    <div class="bg-light text-dark border-10 border-info rounded p-5">

        <div class="text-light text-center py-2">
            <div class="container">
                <div class="row justify-content-center py-2">
                    <form class="form col-10 col-sm-8 col-md-6 col-lg-4 align-self-center" action="/search"
                          method="GET">
                        <div class="form__group form-group">
                            <input name="word" type="text" placeholder="search text" class="form-control mb-1"
                                   autocomplete="off" value="{{ word }}">
                        </div>
                        <button type="submit" class="btn btn-info form-control">submit</button>
                    </form>
                </div>
            </div>
        </div>
        {% if word %}
            <hr>
            {% include 'records.html.twig' with {records} %}
        {% endif %}
    </div>
{% endblock body %}
